<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.AccountPageFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/r254pww5mgq8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/runj7vic3t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/r632qqd4ov0m"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/account_circle"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/r3lmgu522ttq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="5dp"
                android:layout_marginEnd="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rvejfd6nwnu8"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Иванов Иван Иванович" />

                <TextView
                    android:id="@+id/rgx0qprs29g"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="+78005553535" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="54dp"
                android:layout_height="54dp"

                android:background="@drawable/abwfveawefvwvfewfve"
                android:backgroundTint="@color/accent"
                android:padding="10dp"
                android:layout_marginEnd="20dp">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/exit_to_app"
                    app:tint="@color/white" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:background="@drawable/abwfveawefvwvfewfve"
                    android:backgroundTint="@color/accent"
                    android:padding="10dp"
                    >

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/cog_outline"
                        app:tint="@color/white" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rrn607dikoo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CAC4D0"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

</LinearLayout>