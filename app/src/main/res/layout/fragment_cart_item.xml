<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/s0000001asw1cr15bffffff"
    android:padding="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rveg6g2j8tfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingVertical="22dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_cart_item"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_placeholder"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/text_cart_item_price"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="7199.00 â‚½" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rjegfkrdxvo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/button_cart_item_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/trash_can_outline"
            android:background="?android:attr/selectableItemBackground"

            android:scaleType="fitXY"
            app:tint="@android:color/holo_red_dark" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_cart_item_keywords"
                android:textColor="#7E7E7E"
                android:textSize="10sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="DUCKY FULL-SIZE"
                />
            <TextView
                android:id="@+id/text_cart_item_title"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Ducky Origin Vintage Double Shot PBT Mechanical Keyboard Regular price"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rna8050xifr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingVertical="11dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/sbcbcbcsw1cr5bffffff"
                android:paddingHorizontal="15dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/button_cart_item_subtract"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="28dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="?android:attr/selectableItemBackground"

                    android:text="-"
                    />
                <TextView
                    android:id="@+id/text_cart_item_amount"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="27dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="1"
                    />
                <TextView
                    android:id="@+id/button_cart_item_add"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="+"
                    android:background="?android:attr/selectableItemBackground"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
