<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:name="com.rubicus.keymechapp.CarItemtListFragment"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".fragments.CartItemListFragment"
        tools:listitem="@layout/fragment_cart_item" />

    <LinearLayout
        android:id="@+id/rto3mke81vv8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F7F7"
        android:elevation="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="13dp"
        android:paddingVertical="11dp">

        <TextView
            android:id="@+id/text_total_price"
            style="@style/textDisplay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="Итого: 1234"
            android:textStyle="bold" />

        <LinearLayout

            android:id="@+id/button_go_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/abwfveawefvwvfewfve"

            android:backgroundTint="@color/accent"
            android:padding="10dp">

            <TextView
                style="@style/textDisplay1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Перейти к оформлению"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>