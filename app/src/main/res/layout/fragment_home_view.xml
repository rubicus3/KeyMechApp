<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeView">

    <LinearLayout
        android:id="@+id/r7zwqe7e46ec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:paddingTop="10dp"
        android:paddingBottom="53dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rf4zvmcgcsaf"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Популярные переключатели"
            />
        <LinearLayout
            android:id="@+id/ri4qg33iwzh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageViewTest"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="20dp"
                    android:background="#D9D9D9"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="4dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/vsdsfvdvfvsd"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Cherry MX Red"
                        />
                    <TextView
                        android:id="@+id/sdvdsfvsdvfdsfb"
                        android:textColor="#7E7E7E"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Linear 45g"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/dsdfbsdfbs"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="20dp"
                    android:background="#D9D9D9"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="4dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/vddsdvfsfb"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Cherry MX Red"
                        />
                    <TextView
                        android:id="@+id/sdfbsdfbdbfdsb"
                        android:textColor="#7E7E7E"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Linear 45g"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:paddingHorizontal="15dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_item_switch_card"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="20dp"
                    android:background="#D9D9D9"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingVertical="4dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_item_switch_title"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Cherry MX Red"
                        />
                    <TextView
                        android:id="@+id/text_item_switch_keyword"
                        android:textColor="#7E7E7E"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Linear 45g"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/rhiyvs4w3g4"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Избранные товары"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingTop="5dp"
            android:paddingBottom="17dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"/>
    </LinearLayout>
</FrameLayout>