<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OrderPlacementFragment">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/r2iw57mukv8j"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rqxivj2dhjj8"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Оформление заказа"
                />
                <LinearLayout
                    android:id="@+id/rndwj8ode0z"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/r49bdwusy5k8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CAC4D0"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rzk4dn6jgc4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/rwdc2t2o8v6j"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingVertical="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rmf9nwtf0na"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Имя получателя"
                            />
                        <EditText
                            android:id="@+id/edit_order_getter"

                            android:inputType="text"
                            android:hint="Иван Иванович Иванов"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/sbcbcbcsw1cr5bffffff"
                            android:paddingVertical="9dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/r2280on1ivmej"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingVertical="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rpta4g50k2lc"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Адрес доставки"
                            />
                        <EditText

                            android:inputType="text"
                            android:hint="Москва, Прсопект Вернадского д. 78, кв. 1"
                            android:id="@+id/edit_order_address"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/sbcbcbcsw1cr5bffffff"
                            android:paddingVertical="8dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="20dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rnzbtfaqbse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingVertical="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/rxn5a3dwiolh"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Комментарий курьеру"
                            />
                        <LinearLayout
                            android:id="@+id/edit_order_comment"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:background="@drawable/sbcbcbcsw1cr5bffffff"
                            android:layout_marginHorizontal="5dp"
                            android:orientation="vertical">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioGroup
                    android:id="@+id/r2pbls4er07s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:checkedButton="@id/radio_sbp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rahwd1c4nfbo"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="299dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Способ оплаты"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingVertical="5dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:paddingVertical="3dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginHorizontal="15dp"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/radio_sbp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_marginEnd="7dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="СБП"
                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="5dp"
                                android:orientation="vertical">
                            </LinearLayout>
                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:src="@mipmap/ic_launcher"
                                android:scaleType="fitCenter"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingVertical="5dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:paddingVertical="3dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginHorizontal="15dp"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/radio_card1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:src="@mipmap/ic_launcher"
                                />

                            <TextView
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_marginEnd="7dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Картой"
                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="5dp"
                                android:orientation="vertical">
                            </LinearLayout>
                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:src="@drawable/vector__2_"
                                android:scaleType="fitCenter"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingVertical="5dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:paddingVertical="3dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginHorizontal="15dp"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/radio_card2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_marginEnd="7dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Картой при получении"
                                />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="5dp"
                                android:orientation="vertical">
                            </LinearLayout>
                            <ImageView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:src="@drawable/vector"
                                android:scaleType="fitCenter"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/rgmr7p9tounq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingVertical="5dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/rlrbij3yqag"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:background="#FFFFFF"
                            android:paddingVertical="3dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginHorizontal="15dp"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/radio_card3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:src="@mipmap/ic_launcher"
                                />
                            <TextView
                                android:textColor="#000000"
                                android:textSize="14sp"
                                android:layout_marginEnd="7dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="Наличными"
                                />
                            <LinearLayout
                                android:id="@+id/r67yykf8on0j"
                                android:layout_width="0dp"
                                android:layout_height="10dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="5dp"
                                android:orientation="vertical">
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/rdkkl2hhkcks"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:src="@drawable/vector__1_"
                                android:scaleType="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
        <LinearLayout
            android:id="@+id/rto3mke81vv8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F7F7"
            android:elevation="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="13dp"
            android:paddingVertical="11dp">

            <TextView
                android:id="@+id/text_total_price"
                style="@style/textDisplay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="Итого: 1234"
                android:textStyle="bold" />

            <LinearLayout

                android:id="@+id/button_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/abwfveawefvwvfewfve"

                android:backgroundTint="@color/accent"
                android:padding="10dp">

                <TextView
                    style="@style/textDisplay1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Оплатить"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>