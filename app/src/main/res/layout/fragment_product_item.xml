<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dp"
    android:background="?android:attr/selectableItemBackground"

    android:layout_marginBottom="15dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/image_product_item"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_placeholder"
        android:scaleType="fitCenter"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:orientation="vertical"
        android:gravity="top">
        <TextView
            android:id="@+id/text_product_item_keywords"
            style="@style/textSubhead"
            android:textColor="#7E7E7E"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="DUCKY FULL-SIZE"
            />
        <TextView
            android:id="@+id/text_product_item_title"
            style="@style/textRegular"
            android:layout_marginBottom="5dp"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Ducky Origin Vintage Double Shot PBT Mechanical Keyboard Regular price"
            />
        <TextView
            style="@style/textRegular"
            android:id="@+id/text_product_itme_price"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="89.00 $"
            />
    </LinearLayout>
</LinearLayout>