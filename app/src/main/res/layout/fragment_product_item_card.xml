<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ProductItemCard"
    android:background="#FFFFFF"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/image_product"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="5dp"
        android:background="#D9D9D9"
        android:src=""
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:orientation="vertical"
        android:gravity="top">
        <TextView
            android:id="@+id/text_product_keywords"
            android:textColor="#7E7E7E"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="DUCKY FULL-SIZE"
            />
        <TextView
            android:id="@+id/text_product_title"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Ducky Origin Vintage Double Shot PBT Mechanical Keyboard Regular price"
            />
        <TextView
            android:id="@+id/text_product_price"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="89.00 $"
            />
    </LinearLayout>
</LinearLayout>